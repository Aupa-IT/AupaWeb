
@{
    ViewBag.Title = "EditPost";
}

@model IEnumerable<AupaWeb.Models.PostDataObject>

<body class="bg-light">
    <div class="container">
        <div class="py-5 text-center">
        </div>

        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">

            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Confirm Delete Post</h4>
                @foreach (var eachPostData in ViewBag.ListOfPosts as List<AupaWeb.Models.PostDataObject>)
                {
                    using (Html.BeginForm("UpdatePost", "Post", new { postID = eachPostData.Aaa01 }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <input type="hidden" placeholder="@eachPostData.Aaa01" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="Aaa06">Title</label>
                            @Html.TextBoxFor(model => @eachPostData.Aaa06, new { @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            <label for="Aaa07">Post Content</label>
                            @Html.TextAreaFor(model => @eachPostData.Aaa07, new { @class = "form-control", rows="6" })
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                            </div>
                        </div>
                        <input type="submit" class="btn btn-primary" value="Delete" onclick="@("window.location.href='" + @Url.Action("UpdatePost", "Post",new { postID=eachPostData.Aaa01}) + "'");" />
                    }
                }
            </div>
        </div>
    </div>
</body>

